{
  "manifest_version": 2,
  "name": "BacklogLinkClipper",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "https://*.backlog.jp/view/*",
    "clipboardWrite"
  ],
  "page_action": {
    "default_icon": {
      "32": "images/blc.png"
    },
    "default_title": "BacklogLinkClipper"
  }
}
